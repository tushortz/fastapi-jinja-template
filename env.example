# Project Application Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=msci
TEST_DATABASE_NAME=msci_test

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application Configuration
DEBUG=False
ENVIRONMENT=development

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Email Configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=True

# File Upload Configuration (for future use)
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# UPLOAD_DIR=uploads

# Rate Limiting (for future use)
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60  # seconds

# Gemini
GEMINI_API_KEY=

# AI Service Selection
# Options: gemini, local
AI_SERVICE=gemini

# Local AI Configuration (LM Studio compatible)
# Used when AI_SERVICE=local
LOCAL_AI_URL=http://localhost:1234
LOCAL_AI_MODEL=local-model
